<div class="content-wrapper background">

  <section class="content" style="margin-left:2%; margin-right:2%; ">
    <div class="box" >
      <div class="box-header">
            <h3 class="box-title">Ajouter étudiant</h3>
          <legend style="margin-top:1.5%"> </legend>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <form method="post" action="/add_etudiant" enctype="multipart/form-data" >
          <div class="row" >
            <div class="file-upload">

              <div class="image-upload-wrap" style="margin-left:27%; width:35%; ">
              <input class="file-upload-input" type="file" onchange="readURL(this)" accept="image/*" name="image">

                <div class="drag-text">
                  <h3>Choisissez l'image</h3>
                </div>
              </div>
              <div class="file-upload-content">
                <img class="file-upload-image" src="#" alt="your image" />
                <div class="image-title-wrap">
                  <button type="button" onclick="removeUpload()" class="remove-image">supprimer <span class="image-title">Uploaded Image</span></button>
                </div>
              </div>
            </div>
          </div>
          <div class="row" style="margin-left:5%; margin-right:5%; ">
          <div class="row" style="margin-top:5%; ">
              <div class="col-xs-6"> 
                  <b> Etat civil </b> 
                  <legend></legend>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Nom
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="nom" placeholder="entrer le nom">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Prénom
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="prenom" placeholder="entrer le prénom">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  CIN
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="cin" placeholder="entrer le cin">
                </div>
                  <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Date de naissance
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                     <input  type="date" class="form-control pull-right" id="datepicker" name="date_naissance">
                  </div>
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Téléphone
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text" placeholder="entrer le numéro de téléphone" name="tel">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  Email
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text" placeholder="entrer l'email" name="email">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Adresse
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                 <input class="form-control" type="text" placeholder="entrer l'adresse" name="adresse">
                </div>
               
              </div>
              <div class="col-xs-6">
              </br></br>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Ville
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <input class="form-control" type="text" placeholder="entere la ville" name="ville">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Pays
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <input class="form-control" type="text" placeholder="entrer la pays" name="pays">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  dernièr diplome
                </div>
                <div class="col-lg-6 col-xs-6 " style="padding:1%"  >
                  <div class="input-file-container">
                    <input class="input-file" type="file" name="diplome" id="my-file" >
                   <label for="my-file" class="input-file-trigger" tabindex="0">choisir le diplome...</label>
                 </div>
                 <p class="file-return"></p>
               </div>
              </br>
                <b>  Formation </b> 
                <legend></legend>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  Formation
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <!-- <ul>
                    <% formations.forEach((formation)=>{ %>
                    <li><%= formation.nom %></li>
                    <% }) %>
                    </ul>
                  -->
                  <select name="formation" required="" id="id_select" class="form-control" onchange="">
                    <option disabled selected value> -- séléctionner la formation  -- </option>
                    <%for(i=0; i<formations.length; i++){%>
                      <option value="<%= formations[i]._id%>"  ><%= formations[i].nom %></option>
                    <%}%>
                  </select>
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  Filière 
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <!-- sera auatomatiquement générer apres le choix du formation
                  -->
                  <select name="filiere"  class="form-control">
                    <option disabled selected value> -- séléctionner la filiere  -- </option>
                      <%for(i=0; i<filieres.length; i++){%>
                        <option value="<%= filieres[i]._id%>" ><%= filieres[i].nom %></option>
                      <%}%>  
                  </select>
                  
                </div>
              </div>

          </div>
         
          <div class="row" style="margin-top:2%; ">
            <button type="submit" class="btn btn-primary btn-flat" style="background-color: #7A8488;border-color: #7A8488; float:right"><i class="icon edit"></i>Ajouter</button>
        </div>
         </div> 
          </form>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
    
