<div class="content-wrapper background">

  <section class="content" style="margin-left:5%; margin-right:5%; padding-top:2% ">
    <div class="box" style="height: 550px">
        <div class="box" >
          <div class="box-header">
            <h3 class="box-title" style="font-weight: bold;"><i class="fa fa-th-list"></i>   Liste des filières</h3>
            <legend ></legend>
          </div>
                         
      </div>
    
      <div class="table-wrap ex1"><br>
          <table class="table table-bordered table table-striped" style="width: 80%;margin-left: 7%" id="content">  
          <tr>  
            <th class="text-center">Formations</th>
            <th class="text-center">Liste des filières</th>
            <th class="text-center" style="width: 18%;">Actions</th> 
          </tr>  
          <%for(i=0; i<filieres.length; i++){%>
                        
          <tr>  
            <td class="text-center"><%= filieres[i].formation["nom"] %></td>
            <td class="text-center"><%= filieres[i].nom %></td>
            
            <td style="width: 15%;">
              <a data-toggle="modal" data-target="#modal-default1<%= filieres[i]._id %>" class="btn btn-default" >
                <i class="glyphicon glyphicon-edit"></i>
              </a>
              <div class="modal fade" id="modal-default1<%= filieres[i]._id %>">
                <div class="modal-dialog">
                    <form method="post" action="filiere_modify/<%= filieres[i]._id %>">
                  <div class="modal-content content_modal" >
                      
                    <div class="modal-body">
                      <p class="delete_body">modifier la filière <b><%= filieres[i].nom %></b> </p>
                      <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                        Intitulé
                      </div>
                      <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                       <input class="form-control" type="text" name="nom" value="<%= filieres[i].nom %>">
                      </div>
                      <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                        Description
                      </div>
                      <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                       <textarea class="form-control" rows="10" cols="150" name="description" ><%= filieres[i].description %></textarea>
                      </div>
                    </div>
                    <div class="modal-footer" >
                     <button type="submit" class="btn btn-default pull-left hover_delete_modal" data-dismiss="modal<%= filieres[i]._id %>" >Modifier</button>
                      <button type="button" class="btn btn-primary hover_annuler_modal" data-dismiss="modal" >Annuler</button>
                    </div>
                  </div>
                </form>
                                <!-- /.modal-content -->
                </div>
                              <!-- /.modal-dialog -->
              </div>
              <a data-toggle="modal" data-target="#modal-default2<%= filieres[i]._id %>" class="btn btn-info"> <i class="fa fa-info-circle"></i>
              </a>
                <div class="modal fade" id="modal-default2<%= filieres[i]._id %>">
                <div class="modal-dialog">
                  <div class="modal-content content_modal" >
                    <div class="modal-body">
                      <p class="delete_body"><%= filieres[i].nom %>  </p>
                      <%= filieres[i].description %>        
                    </div>
                  </div>
                                <!-- /.modal-content -->
                </div>
                              <!-- /.modal-dialog -->
              </div>
              <a data-toggle="modal" data-target="#modal-default3<%= filieres[i]._id %>" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"> </i>
              </a>
                <div class="modal fade" id="modal-default3<%= filieres[i]._id %>">
                <div class="modal-dialog">
                  <div class="modal-content content_modal" >
                    <div class="modal-body">
                                    
                      <p class="delete_body">Voulez-vous vraiment supprimer cette filière  </p>
                    </div>
                    <div class="modal-footer" >
                      <a href="delete_filiere/<%= filieres[i]._id %>"><button type="button" class="btn btn-default pull-left hover_delete_modal" data-dismiss="modal<%= filieres[i]._id %>" >Supprimer</button></a>
                      <button type="button" class="btn btn-primary hover_annuler_modal" data-dismiss="modal" >Annuler</button>
                    </div>
                  </div>
                                <!-- /.modal-content -->
                </div>
                              <!-- /.modal-dialog -->
              </div>
              
            </td>  
          </tr>
          <%}%>  
      </table>
        <br>
        </div>
      </div>
 
  <!-- /.box-body -->

  <!-- /.box -->
    
  </section>


<!-- /.content -->

</div>

