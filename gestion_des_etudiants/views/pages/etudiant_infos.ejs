
<%- include('header') -%>

<div class="main-sidebar"> 
  <!-- Left side column. contains the logo and sidebar -->
  <aside class="main-sidebar "  >

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar Menu -->
      <ul class="sidebar-menu" data-widget="tree">
            <li><a href="/"><i class="fa fa-sign-out"></i> <span>Déconnexion</span></a></li>

        <!-- Optionally, you can add icons to the links -->
        <li class="header"> Admin</li>
        <li class="treeview">
          <a href="#">
            <i class="fa  fa-user"></i> <span>Etudiants</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li class="active"><a href="etudiants_list"><i class="fa fa-list-alt"></i> Liste des étudiants</a></li class="active">
            <li><a href="ajouter_etudiant"><i class="fa fa-user-plus"></i> Ajouter étudiant</a></li>
          </ul>
        </li>

        <li class="treeview">
          <a href="#">
            <i class="fa fa-tasks"></i>
            <span>Filières</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
          <ul class="treeview-menu">
            <li><a href="filieres_list"><i class="fa fa-list-ul"></i> Liste des filières</a></l class="active"i>
            <li><a href="ajouter_filiere"><i class="fa fa-plus-square"></i> Ajouter filière</a></li>
          </ul>
        </li>  

        <li >
          <a  href="statistics">
            <i class="fa fa-pie-chart"></i> <span>Statistiques</span>
          </a>
        </li>
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
  </aside>
</div>

<div class="content-wrapper background">

  <section class="content" style="margin-left:3%; margin-right:3%; ">
    <div class="box" >
        <div class="box-header">

              <div class="row">
                <div class="col-lg-3 col-xs-3">
                    <h3 class="box-title"><b> <%= etudiant.nom %>  <%= etudiant.prenom %> </b></h3>
                </div>
              </div>

            <legend style="margin-top:1.5%"> </legend>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

            <div class="row" style=" width:20%; margin-left:40%;text-align:center;">
               <img src="/assets/uploads/images/<%= etudiant.image.data %>" class="img-circle " alt="User Image">
            </div>
            <div class="row" style="margin-left:5%; margin-right:5%; ">
            <div class="row" style="margin-top:5%; ">
                <div class="col-xs-8"> 
                    <b class="grand_titre"> Etat civil </b> 
                    <legend></legend>
                  <div class="col-lg-6 col-xs-6 titre">
                   <b> CIN </b>  
                  </div>
                 <div class="col-lg-6 col-xs-6">
                   : <%= etudiant.CNI %>
                  </div>
                    <div class="col-lg-6 col-xs-6 titre">
                   <b> Date de naissance </b>  
                  </div>
                  <div class="col-lg-6 col-xs-6">
                    : <%= etudiant.dateNaissance %>
                  </div>
                  <div class="col-lg-6 col-xs-6 titre">
                    <b> Téléphone </b> 
                  </div>
                  <div class="col-lg-6 col-xs-6">
                   : <%= etudiant.tel %>
                  </div>
                  <div class="col-lg-6 col-xs-6 titre">  
                    <b> Email </b> 
                  </div>
                  <div class="col-lg-6 col-xs-6">
                   : <%= etudiant.email %>
                  </div>
                  <div class="col-lg-6 col-xs-6 titre">
                   <b> Adresse </b> 
                  </div>
                  <div class="col-lg-6 col-xs-6">
                   : <%= etudiant.adresse %>
                  </div>
                  <div class="col-lg-6 col-xs-6 titre"> 
                   <b> Ville </b> 
                  </div>
                  <div class="col-lg-6 col-xs-6">
                    : <%= etudiant.ville %>
                  </div>
                  <div class="col-lg-6 col-xs-6 titre"> 
                    <b> Pays </b> 
                  </div>
                 <div class="col-lg-6 col-xs-6">
                    : <%= etudiant.pays %>
                  </div>

                </div>

                <div class="col-xs-4">
                 <b class="grand_titre"> Formation </b> 
                  <legend></legend>
                 <div class="col-lg-6 col-xs-6 titre"> 
                   <b> Type de formation </b> 
                  </div>
                 <div class="col-lg-6 col-xs-6">
                    : <%= filiere%>
                  </div>
                 <div class="col-lg-6 col-xs-6 titre">  
                   <b> Filière </b> 
                  </div>
                 <div class="col-lg-6 col-xs-6">
                    : <%= filiere %>
                  </div>
                
                </div>
            </div>
           
            <div class="row" style="margin-top:5%; ">
            </div>
           </div> 
           
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->

  </section>
<!-- /.content -->

</div>

<%- include('footer') -%>





        








