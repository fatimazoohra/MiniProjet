<div class="content-wrapper background">

  <section class="content" style="margin-left:2%; margin-right:2%; ">
    <div class="box" >
      <div class="box-header">
            <h3 class="box-title">Modifier étudiant</h3>
          <legend style="margin-top:1.5%"> </legend>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
         <form method="post" action="editer_etudiant/<%= etudiant._id %>" enctype="multipart/form-data" >
          <div class="row" >
            <div class="file-upload">

                <div class="image-upload-wrap" style="margin-left:27%; width:35%; display:none; ">
                    <input class="file-upload-input" type="file" onchange="readURL(this)" accept="image/*" name="image">
                  <div class="drag-text">
                    <h3>Choisissez l'image</h3>
                  </div>
                </div>
                <div class="file-upload-content" style="display:block;">
                  <img class="file-upload-image" src="/assets/uploads/images/<%= etudiant.image.data %>" alt="your image" />
                  <div class="image-title-wrap">
                    <button type="button" onclick="removeUpload()" class="remove-image">Delete <span class="image-title">Uploaded Image</span></button>
                  </div>
                </div>
              </div>
          </div>
          <div class="row" style="margin-left:5%; margin-right:5%; ">
          <div class="row" style="margin-top:5%; ">
              <div class="col-xs-6"> 
                  <b> Etat civil </b> 
                  <legend></legend>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Nom
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="nom" value="<%= etudiant.nom %>">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Prénom
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="prenom" value="<%= etudiant.prenom %>">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  CIN
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text"name="cin" value="<%= etudiant.CNI %>">
                </div>
                  <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Date de naissance
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                     <input  type="date" class="form-control pull-right" id="datepicker" name="date_naissance" value="<%= etudiant.dateNaissance %>">
                  </div>
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Téléphone
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text" value="<%= etudiant.tel %>" name="tel">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  Email
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 <input class="form-control" type="text" value="<%= etudiant.email %>" name="email">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Adresse
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                 <input class="form-control" type="text" value="<%= etudiant.adresse %>" name="adresse">
                </div>
               
              </div>
              <div class="col-xs-6">
              </br></br>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Ville
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <input class="form-control" type="text" value="<%= etudiant.ville %>" name="ville">
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  > 
                  Pays
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                  <input class="form-control" type="text" value="<%= etudiant.pays %>" name="pays" >
                </div>
               
              </br>
                <b>  Formation </b> 
                <legend></legend>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >  
                  Filière 
                </div>
                <div class="col-lg-6 col-xs-6" style="padding:1%"  >
                 
                 <select name="filiere"  class="form-control">
                    <option  selected value="<%= etudiant.filiere.nom %>" >  <%= etudiant.filiere.nom %> </option>
                      <%for(i=0; i<filieres.length; i++){%>
                        <option value="<%= filieres[i]._id%>" ><%= filieres[i].nom %></option>
                      <%}%>
                  </select>
                  
                </div>
              </div>

          </div>
         
          <div class="row" style="margin-top:2%; ">
            <button type="submit" class="btn btn-primary btn-flat" style="background-color: #7A8488;border-color: #7A8488; float:right"><i class="icon edit"></i>Modifier</button>
        </div>
         </div> 
          </form>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
    
</section>
<!-- /.content -->
</div>

<%- include('footer') -%>





        








